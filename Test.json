{
    "openapi": "3.0.0",
    "info": {
      "title": "Complete Schema Composition Example",
      "version": "1.0.0"
    },
    "servers": [
      {
        "url": "https://api.example.com"
      }
    ],
    "paths": {
      "/process_data/{dataType}": {
        "post": {
          "summary": "Process Data",
          "parameters": [
            {
              "name": "dataType",
              "in": "path",
              "required": true,
              "schema": {
                "type": "string"
              },
              "description": "Type of data: 'person' or 'address'"
            }
          ],
          "requestBody": {
            "description": "Data to process",
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "oneOf": [
                    {
                      "type": "object",
                      "properties": {
                        "name": {
                          "type": "string"
                        },
                        "age": {
                          "type": "integer"
                        }
                      }
                    },
                    {
                      "type": "object",
                      "properties": {
                        "street": {
                          "type": "string"
                        },
                        "city": {
                          "type": "string"
                        }
                      }
                    },
                    {
                      "allOf": [
                        {
                          "type": "object",
                          "properties": {
                            "name": {
                              "type": "string"
                            },
                            "age": {
                              "type": "integer"
                            }
                          }
                        },
                        {
                          "type": "object",
                          "properties": {
                            "street": {
                              "type": "string"
                            },
                            "city": {
                              "type": "string"
                            }
                          }
                        }
                      ]
                    },
                    {
                      "anyOf": [
                        {
                          "type": "object",
                          "properties": {
                            "name": {
                              "type": "string"
                            },
                            "age": {
                              "type": "integer"
                            }
                          }
                        },
                        {
                          "type": "object",
                          "properties": {
                            "street": {
                              "type": "string"
                            },
                            "city": {
                              "type": "string"
                            }
                          }
                        }
                      ]
                    }
                  ]
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "Processing successful"
            }
          }
        }
      }
    }
  }
  